.row
  .col-12
    card
      h5.title(slot:header) Crear Cliente
      .row
        .col-md-5.pr-md-1
          base-input(
            label="Nombres" v-model="cliente.nombres"
          )
        .col-md-5.pr-md-1
          base-input(
            label="Apellidos" v-model="cliente.apellidos"
          )
        .col-md-5.pr-md-1
          base-input(
            label="Direcci√≥n" v-model="cliente.direccion"
          )
        .col-md-5.pr-md-1
          base-input(
            label="Telefono" v-model="cliente.telefono"
          )
        .col-md-5.pr-md-1
          b-form-group(label="E-mail")
            base-input(
              v-model="cliente.email"
            )
        .col-md-5.pr-md-1
          b-form-group(label="Fecha de Nacimiento")
            b-form-datepicker(v-model="cliente.fecha_nacimiento" style="height=calc(2.25rem + 2px)").mb-2
        .col-md-5.pr-md-1
          base-input(
            label="Codigo" v-model="cliente.codigo"
          )
        .col-md-5.pr-md-1
          b-form-group(label="Estado")
            b-form-select(  :options="estados" v-model="cliente.estado")
        .col-md-5.pr-md-1
          b-form-group(label="Departamento")
            b-form-select(  :options="departamentos" v-model="cliente.departamento")
        .col-12
          button.btn.btn-danger.pull-right
            router-link(to="/clients") Cancelar
          button.btn.btn-success.pull-right( @click="save") Agregar
