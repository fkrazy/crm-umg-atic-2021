.container
  .row
    .col-12.p-5
      card
        h5.title(slot:header) Ingreso
        .row.justify-content-center
          .col-md-5.pr-md-1
            b-form-group(
              :state="!errors['username'] || errors['username'].length === 0"
              label="Usuario"
            )
              b-form-input(v-model="username")
              b-form-invalid-feedback(v-for="myerror in errors['username']" :state="false") {{myerror}}
          .w-100
          .col-md-5.pr-md-1
            b-form-group(
              :state="!errors['username'] || errors['password'].length === 0"
              v-model="password"
              label="Contrase√±a"
            )
              b-form-input(v-model="password" type="password")
              b-form-invalid-feedback(v-for="myerror in errors['password']" :state="false") {{myerror}}
          .col-12
            button.btn.btn-success.pull-right(@click="ingresar") Ingresar
